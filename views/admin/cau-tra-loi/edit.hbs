{{!-- views/admin/cau-tra-loi/edit.hbs --}}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Chỉnh sửa Câu trả lời</h3>
            </div>
            <div class="card-body">
                <form action="/admin/cau-tra-loi/edit/{{cauTraLoi.id}}" method="POST">
                    <div class="form-group">
                        <label for="cauHoiId">Câu hỏi</label>
                        <select class="form-control select2" id="cauHoiId" name="cauHoiId" required>
                            <option value="">Chọn câu hỏi</option>
                            {{#each cauHois}}
                            <option value="{{this.id}}" {{#if (eq this.id ../cauTraLoi.cauHoiId)}}selected{{/if}}>
                                {{this.noiDung}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="noiDung">Nội dung câu trả lời</label>
                        <textarea class="form-control" id="noiDung" name="noiDung" rows="3" required>{{cauTraLoi.noiDung}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="diem">Điểm</label>
                        <input type="number" class="form-control" id="diem" name="diem" min="0" max="10" step="0.1" value="{{cauTraLoi.diem}}" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a href="/admin/cau-tra-loi" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('.select2').select2({
            theme: 'bootstrap4'
        });
    });
</script> 