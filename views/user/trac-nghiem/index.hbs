<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 60px;
        color: #333;
    }

    .hexagon-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        position: relative;
    }

    .hexagon-item {
        width: 250px;
        height: 280px;
        position: relative;
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
        transition: transform 0.3s ease;
        cursor: pointer;
    }

    /* Reset the grid and use absolute positioning */
    .hexagon-grid {
        display: block;
        height: 800px;
        position: relative;
    }

    .hexagon-item {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Top row */
    .hexagon-item:nth-child(1) {
        top: 0;
        transform: translateX(calc(-50% - 130px));
    }

    .hexagon-item:nth-child(2) {
        top: 0;
        transform: translateX(calc(-50% + 130px));
    }

    /* Middle row */
    .hexagon-item:nth-child(3) {
        top: 220px;
        transform: translateX(calc(-50% - 260px));
    }

    .hexagon-item:nth-child(4) {
        top: 220px;
        transform: translateX(calc(-50% + 260px));
    }

    /* Bottom row */
    .hexagon-item:nth-child(5) {
        top: 440px;
        transform: translateX(calc(-50% - 130px));
    }

    .hexagon-item:nth-child(6) {
        top: 440px;
        transform: translateX(calc(-50% + 130px));
    }

    .hexagon-item:hover {
        transform: translateX(-50%) scale(1.05);
    }

    /* Adjust hover effects for positioned items */
    .hexagon-item:nth-child(1):hover {
        transform: translateX(calc(-50% - 130px)) scale(1.05);
    }

    .hexagon-item:nth-child(2):hover {
        transform: translateX(calc(-50% + 130px)) scale(1.05);
    }

    .hexagon-item:nth-child(3):hover {
        transform: translateX(calc(-50% - 260px)) scale(1.05);
    }

    .hexagon-item:nth-child(4):hover {
        transform: translateX(calc(-50% + 260px)) scale(1.05);
    }

    .hexagon-item:nth-child(5):hover {
        transform: translateX(calc(-50% - 130px)) scale(1.05);
    }

    .hexagon-item:nth-child(6):hover {
        transform: translateX(calc(-50% + 130px)) scale(1.05);
    }

    .hexagon-content {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        text-align: center;
        color: white;
    }

    .hexagon-icon {
        width: 80px;
        height: 80px;
        margin-bottom: 15px;
    }

    .hexagon-title {
        font-size: 1.1rem;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .hexagon-subtitle {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* Specific colors for each hexagon */
    .business { background-color: #4285f4; }
    .engineering { background-color: #34a853; }
    .education { background-color: #fbbc05; }
    .arts { background-color: #ea4335; }
    .military { background-color: #1a73e8; }
    .science { background-color: #9c27b0; }

    @media (max-width: 768px) {
        .hexagon-grid {
            height: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .hexagon-item {
            position: static;
            transform: none;
            width: 200px;
            height: 230px;
        }

        .hexagon-item:nth-child(n) {
            transform: none;
        }

        .hexagon-item:hover {
            transform: scale(1.05);
        }
    }

    @media (max-width: 480px) {
        .hexagon-grid {
            grid-template-columns: 1fr;
            max-width: 250px;
        }
        
        .hexagon-item {
            width: 180px;
            height: 210px;
        }
        
        .hexagon-item:nth-child(n) {
            transform: none;
        }
    }

    /* Add new styles for the introduction section */
    .intro-section {
        max-width: 800px;
        margin: 60px auto;
        padding: 20px;
    }

    .intro-section h1 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .intro-text {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
        margin-bottom: 20px;
    }

    .intro-section h2 {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 15px;
    }

    .intro-list {
        list-style: none;
